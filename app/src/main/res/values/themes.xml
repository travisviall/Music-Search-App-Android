<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicFinalProject" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <!-- Customize your theme here. -->
    </style>

    <style name ="ToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name ="android:background">@color/purple_gray</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.5dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="SearchResultsBox" parent="Widget.AppCompat.EditText">
        <item name="background">@color/white</item>
    </style>

    <style name="DialogFullScreen" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name ="android:windowIsFloating">false</item>
    <item name ="android:windowBackground">@android:color/white</item>
    </style>


    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="sign_in_buttons" parent ="Theme.AppCompat.Light.NoActionBar">
        <item name="android:shadowDy">8</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">#1D1E45</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:background">@drawable/button_custom</item>

    </style>
</resources>